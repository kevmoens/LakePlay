@page "/admin"

<PageTitle>Admin Settings</PageTitle>

<div class="top-row">
    <button @onclick="OnLogout">Logout</button>
</div>

<div class="grid-container">
    <div class="item-gameheader">
        <h2>Game</h2>
    </div>
    <div class="item-game">
        <table>
            <tr>
                <td>Number of Rounds</td>
                <td><input type="number" @bind-value="NumberOfRounds" min="1" /></td>
            </tr>
            <tr>
                <td>Current Round</td>
                <td><input type="number" @bind-value="Game!.CurrentRound" min="1" readonly /> </td>
            </tr>
            <tr>
                <td>Round Length in seconds</td>
                <td><input type="number" @bind-value="Game!.RoundLength" min="1" /> </td>
            </tr>
            <tr>
                <td>Leaderboard Length in seconds</td>
                <td><input type="number" @bind-value="Game!.LeaderboardLength" min="1"  /> </td>
            </tr>
            <tr>
                <td>Result Length in seconds</td>
                <td><input type="number" @bind-value="Game!.ResultLength" min="1"  /> </td>
            </tr>
        </table>

        <button @onclick="OnResetGameStatus">Reset Game</button>
    </div>
    
</div>

<br/>
<button @onclick="OnSave">Save</button>
<button @onclick="OnQuestions">Questions</button>
<button @onclick="OnStartGame">Start Game</button>